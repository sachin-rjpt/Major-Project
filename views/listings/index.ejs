<%layout("/layouts/boilerplate.ejs")%>
<style>
.filters {
 display: flex;
 overflow-x: auto; 
  white-space: nowrap;
  scrollbar-width: none;
}
.filter{
  margin:1rem 0 1rem 2rem;
   display: flex;
   flex-direction: column;
   align-items: center;
   opacity: 0.7;
   cursor: pointer;
}
.filter p {
  font-size: 0.8rem;
}
.filter:hover{
    opacity: 1;
}
</style>
<body>
     <div class="filters">
       <div class="filter">
        <div class="icon"> <i class="fa-regular fa-building"></i></div>
          <p>Hostal</p>
       </div>
       <div class="filter Individual">
        <div class="icon"><i class="fa-solid fa-house"></i></div>
          <p>Individual</p>
       </div>
       <div class="filter">
        <div class="icon"><i class="fa-solid fa-bed"></i></div>
          <p>Single Room</p>
       </div>
       <div class="filter">
        <div class="icon"><i class="fa-brands fa-itch-io"></i></div>
          <p>1 BHK</p>
       </div>
       <div class="filter">
        <div class="icon"><i class="fa-solid fa-square-h"></i></div>
          <p>2 BHK</p>
       </div>
       <div class="filter">
        <div class="icon"><i class="fa-solid fa-landmark-dome"></i></div>
          <p>3 BHK</p>
       </div>
     </div>
     <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1"> 
    <% for(data of allListings){ %>
        <a href="/Listings/<%=data._id%>" class="listing-link">
    <div class="listing-card card" >
        <img src="<%=data.image.url%>" class="card-img-top" alt="listing_image" style="height:20rem;"/>
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%=data.title%></b><br>
           &#8377;<%=data.price.toLocaleString("en-IN")%>/month
        </p>
        </div>
      </div>
      </a>
      <% } %>
     </div>
</body>
